// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  username     String     @unique
  email        String     @unique
  passwordHash String
  messages     Messages[]
  Pixel        Pixel[]
}

model Pixel {
  id        Int      @id @default(autoincrement())
  x         Int
  y         Int
  userID    User     @relation(fields: [userId], references: [id])
  userId    Int
  timeStamp DateTime
  RGB       String
}

model Messages {
  id        Int      @id @default(autoincrement())
  message   String
  userID    User     @relation(fields: [userId], references: [id])
  userId    Int
  timeStamp DateTime
}
